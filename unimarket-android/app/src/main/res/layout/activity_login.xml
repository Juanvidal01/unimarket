<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Si aún no tienes usc_banner.png, deja este View de relleno temporal -->
        <ImageView
            android:src="@drawable/usc_banner"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/input_bg" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Uni"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Market"
                android:textColor="@color/brand_cyan"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:text="Inicia sesión con tu cuenta universitaria"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Email"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEmail"
            android:hint="nombre@usc.edu.co"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/bg_input_outline"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:text="Contraseña"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPassword"
            android:hint="Introduce tu contraseña"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/bg_input_outline"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/btnLogin"
            android:text="INICIAR SESIÓN"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:background="@drawable/btn_primary"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="¿No tienes cuenta? "
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/linkGoRegister"
                android:text="REGÍSTRATE"
                android:textStyle="bold"
                android:textColor="@color/brand_cyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

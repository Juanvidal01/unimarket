<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ========== PERMISOS DE INTERNET ========== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ========== PERMISOS DE IMÁGENES ========== -->
    <!-- Para Android 12 y anteriores -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Para Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:theme="@style/Theme.UniMarket"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true">

        <!-- ========== ACTIVITIES ========== -->

        <!-- Home Activity -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false" />

        <!-- Product Detail Activity -->
        <activity
            android:name=".ui.home.ProductDetailActivity"
            android:exported="false" />

        <!-- Create Product Activity -->
        <activity
            android:name=".ui.home.CreateProductActivity"
            android:exported="false" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />

        <!-- Login Activity - LAUNCHER -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>